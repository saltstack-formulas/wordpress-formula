wordpress:
    cli:
        source: https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar
        hash:  https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar.sha512
        allowroot: False
    sites:
        sitenameA.com:
            username: siteAuser
            password: siteApass
            database: siteAdb
            dbhost: localhost
            dbuser: siteAdbuser
            dbpass: siteAdbpass
            url: http://siteA.com
            title: 'siteA title'
            email: siteA@email.com
        sitenameB.com:
            username: siteBuser
            password: siteBpass
            database: siteBdb
            dbhost: localhost
            dbuser: siteBdbuser
            dbpass: siteBdbpass
            url: http://siteB.com
            title: 'siteB title'
            email: siteB@email.com
            plugins:
              - '<plugin-name>'
            plugins_url:
                '<plugin-name>':
                    url: '<url-to-obtain-plugin-zipfile>'
                    name: '<plugin-name>'
    lookup:
        docroot: /var/html